<Window x:Class="FutabaTelemetryTrace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutabaTelemetryTrace"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:converters="clr-namespace:FutabaTelemetryTrace.Converters"
        xmlns:viewModels="clr-namespace:FutabaTelemetryTrace.ViewModels"
        mc:Ignorable="d"
        Title="Futaba Telemetry Trace" Height="700" Width="1200"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        Background="#FF1E1E1E">
    <Window.Resources>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#FF2D2D30" Foreground="White">
            <MenuItem Header="File" Foreground="White">
                <MenuItem Header="Open Excel File..." Command="{Binding LoadFileCommand}"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Export" Foreground="White">
                <MenuItem Header="Export to Video..." Command="{Binding ExportVideoCommand}"/>
            </MenuItem>
            <MenuItem Header="Help" Foreground="White">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Chart Area -->
        <Border Grid.Row="1" Margin="10" BorderBrush="#FF3F3F46" BorderThickness="1" Background="#FF252526">
            <Grid>
                <lvc:CartesianChart Series="{Binding Series}"
                                   x:Name="TelemetryChart"
                                   Background="#FF252526"/>
                <TextBlock Text="Load an Excel file to display telemetry data"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Foreground="#FF808080"
                          FontSize="16"
                          Visibility="{Binding MaxTime, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                <Border VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="10"
                        Padding="8"
                        Background="#B3000000"
                        CornerRadius="4">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Channels.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel MaxHeight="120">
                        <ItemsControl ItemsSource="{Binding Channels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              IsChecked="{Binding IsVisible, Mode=TwoWay}"
                                              Margin="0,0,8,8"
                                              Foreground="White"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Playback Controls -->
        <Border Grid.Row="2" Margin="10,0,10,10" Padding="10" Background="#FF2D2D30" BorderBrush="#FF3F3F46" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Timeline Slider -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding CurrentTime, StringFormat='{}{0:F2}s'}" 
                              Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="50"/>
                    <Slider Grid.Column="1" 
                           Minimum="0" 
                           Maximum="{Binding MaxTime}" 
                           Value="{Binding CurrentTime, Mode=TwoWay}"
                           VerticalAlignment="Center"
                           IsEnabled="{Binding MaxTime, Converter={StaticResource GreaterThanZeroConverter}}"/>
                    <TextBlock Grid.Column="2" Text="{Binding MaxTime, StringFormat='{}{0:F2}s'}" 
                              Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" MinWidth="50"/>
                </Grid>

                <!-- Window Scroll Bar -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Window:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Slider Grid.Column="1"
                               Orientation="Horizontal"
                               Minimum="3"
                               Maximum="10"
                               Value="{Binding WindowDuration, Mode=TwoWay}"
                               LargeChange="1"
                               SmallChange="0.1"
                               Height="20"
                               IsEnabled="{Binding MaxTime, Converter={StaticResource GreaterThanZeroConverter}}"/>
                    <TextBlock Grid.Column="2" Text="{Binding WindowDuration, StringFormat='{}{0:F2}s'}"
                               Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" MinWidth="50"/>
                </Grid>

                <!-- Control Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="▶ Play" 
                           Command="{Binding PlayCommand}" 
                           Width="80" Height="30" Margin="5"
                           Background="#FF007ACC" Foreground="White" BorderThickness="0"/>
                    <Button Content="⏸ Pause" 
                           Command="{Binding PauseCommand}" 
                           Width="80" Height="30" Margin="5"
                           Background="#FF007ACC" Foreground="White" BorderThickness="0"/>
                    <Button Content="⏹ Reset" 
                           Command="{Binding ResetCommand}" 
                           Width="80" Height="30" Margin="5"
                           Background="#FF007ACC" Foreground="White" BorderThickness="0"/>
                    <Button Content="📹 Export" 
                           Command="{Binding ExportVideoCommand}" 
                           Width="100" Height="30" Margin="5"
                           Background="#FF28A745" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#FF007ACC" Foreground="White">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Export Progress: " Visibility="{Binding IsExporting, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <ProgressBar Value="{Binding ExportProgress}" 
                                Minimum="0" Maximum="100" 
                                Width="100" Height="16" 
                                Visibility="{Binding IsExporting, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
